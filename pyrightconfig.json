{
  "$schema": "https://json.schemastore.org/pyrightconfig",
  "typeCheckingMode": "standard",
  "pythonVersion": "3.11",
  "reportMissingTypeStubs": false,
  "reportMissingImports": false,
  "venvPath": ".",
  "venv": ".venv",
  "strict": [
    "backend/app/schemas/**",
    "backend/app/services/**"
  ],
  "ignore": [
    "alembic/**",
    "migrations/**",
    "migrations_tmp/**",
    "tmp_files/**"
  ]
}