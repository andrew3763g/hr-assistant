{
  "name": "hr-assistant",
  "dockerComposeFile": [
    "../docker-compose.postgres.yml",
    "../docker-compose.dev.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/hr-assistant",

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "remoteUser": "vscode",
  "forwardPorts": [8000, 5432],
  "postCreateCommand": "bash -lc 'python -m venv .venv && source .venv/bin/activate && pip install -U pip && pip install -r requirements.txt'"
}
